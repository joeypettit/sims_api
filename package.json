{
  "name": "sims_api",
  "version": "1.0.0",
  "main": "dist/app.js",
  "engines": {
    "node": "23.7.0"
  },
"scripts": {
  "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
  "prebuild": "npm install",
  "build": "tsc && npm run build:client",
  "build:client": "cd client && npm install --include=dev && npm run build && cd ..",
  "postbuild": "mkdir -p dist/client && cp -r client/build dist/client/",
  "serve": "node dist/app.js",
  "start": "npm run build && node dist/app.js",
  "heroku-postbuild": "npm run build"
},
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-session": "^1.18.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.13.5",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "nodemon": "^3.1.7",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
